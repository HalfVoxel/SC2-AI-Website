{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "definitions": {
    "author": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "avatar": {
          "type": "string",
          "x-nullable": true
        },
        "email": {
          "type": "string"
        },
        "created_at": {
          "type": "string"
        },
        "updated_at": {
          "type": "string"
        },
        "github": {
          "type": "string",
          "x-nullable": true
        },
        "website": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "username"
      ]
    },
    "bot": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "owner_id": {
          "type": "integer",
          "x-nullable": true
        },
        "author": {
          "type": "string"
        },
        "match_count": {
          "type": "integer"
        },
        "race": {
          "type": "string"
        },
        "win_count": {
          "type": "integer"
        },
        "current_mmr": {
          "type": "integer"
        }
      },
      "required": [
        "id",
        "owner_id",
        "race"
      ]
    },
    "bot_history": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "bot_id": {
          "type": "integer"
        },
        "mmr": {
          "type": "integer"
        },
        "created_at": {
          "type": "string"
        },
        "season_id": {
          "type": "integer"
        }
      },
      "required": [
        "id",
        "bot_id",
        "mmr",
        "season_id"
      ]
    },
    "planned_game": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "requested_on": {
          "type": "string",
          "x-nullable": true
        },
        "computer_id": {
          "type": "integer",
          "x-nullable": true
        },
        "season_id": {
          "type": "integer"
        }
      },
      "required": [
        "computer_id",
        "season_id"
      ]
    },
    "season": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string",
          "x-nullable": true
        },
        "start_date": {
          "type": "string"
        },
        "end_date": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "username"
      ]
    }
  },
  "paths": {
    "/api/authors": {
      "get": {
        "summary": "Retrieves all authors",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "all authors found",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/author"
              }
            }
          }
        }
      }
    },
    "/api/authors/{id}": {
      "get": {
        "summary": "Retrieves a single author",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "author found",
            "schema": {
              "$ref": "#/definitions/author"
            }
          }
        }
      }
    },
    "/api/bots": {
      "get": {
        "summary": "Retrieves all bots",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "all bots found",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/bot"
              }
            }
          }
        }
      }
    },
    "/api/bots/{id}": {
      "get": {
        "summary": "Retrieves a single bot",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "bot found",
            "schema": {
              "$ref": "#/definitions/bot"
            }
          }
        }
      }
    },
    "/api/bot_histories": {
      "get": {
        "summary": "Retrieves all bot histories",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "all bot histories found",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/bot_history"
              }
            }
          }
        }
      }
    },
    "/api/bot_histories/{id}": {
      "get": {
        "summary": "Retrieves a single bot history",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "bot history found",
            "schema": {
              "$ref": "#/definitions/bot_history"
            }
          }
        }
      }
    },
    "/api/seasons/{season_id}/next_game": {
      "get": {
        "summary": "Creates or fetches the next game for a specific computer",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "season_id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "grabs the next game for the requested computer",
            "schema": {
              "$ref": "#/definitions/planned_game"
            }
          }
        }
      }
    },
    "/api/seasons/{season_id}/planned_games": {
      "get": {
        "summary": "Retrieves all planned games",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "season_id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "all planned games found",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/planned_game"
              }
            }
          }
        }
      }
    },
    "/api/seasons/{season_id}/planned_games/{id}": {
      "get": {
        "summary": "Retrieves a single planned game",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "season_id",
            "in": "path",
            "type": "integer",
            "required": true
          },
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "planned game found",
            "schema": {
              "$ref": "#/definitions/planned_game"
            }
          }
        }
      }
    }
  }
}